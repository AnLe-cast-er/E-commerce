{
  "bsonType": "object",
  "required": ["name", "price","category", "image", "description", "subCategory", "sizes"],
  "properties": {
    "name": {
      "bsonType": "string",
      "description": "Product name, required"
    },
    "price": {
      "bsonType": "double",
      "description": "Product price, required"
    },
    "image": {
      "bsonType": "array",
      "description": "List of image URLs",
      "items": { "bsonType": "string" }
    },
    "description": {
      "bsonType": "string",
      "description": "Product description, required"
    },
    "category": {
      "bsonType": "string",
      "description": "Main category, required"
    },
    "subCategory": {
      "bsonType": "string",
      "description": "Sub-category, required"
    },
    "sizes": {
      "bsonType": "array",
      "items": { "bsonType": "string" },
      "description": "List of product sizes, required"
    },
    "bestseller": {
      "bsonType": ["bool", "null"],
      "description": "Whether the product is a bestseller, can be null"
    },
    "date": {
      "bsonType": "int",
      "description": "Creation or update date, timestamp integer"
    },
    "created_at": {
      "bsonType": ["date", "null"]
    },
    "updated_at": {
      "bsonType": ["date", "null"]
    }
  }
}
